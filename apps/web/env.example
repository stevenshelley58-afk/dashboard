# Supabase Database (use transaction pooler for Vercel - port 6543)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@[PROJECT-REF].supabase.co:6543/postgres?pgbouncer=true

# Authentication
JWT_SECRET=generate-with-openssl-rand-hex-32
AUTH_JWT_COOKIE_NAME=dashboard_token
LOCAL_DEV_ACCOUNT_ID=optional-for-local-development

# Shopify OAuth & API
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_SCOPES=read_orders,read_products,read_customers
SHOPIFY_STATE_SECRET=generate-with-openssl-rand-hex-32
SHOPIFY_APP_URL=https://your-app-domain.vercel.app
SHOPIFY_API_VERSION=2024-10
SHOPIFY_WEBHOOK_DB_TIMEOUT_MS=4000

# Meta/Facebook Marketing API (optional)
META_JOBS_ENABLED=true
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_API_VERSION=v18.0
META_API_BASE_URL=https://graph.facebook.com
META_STUB_MODE=false
META_FRESH_SCHED_MINUTES=60
META_CRON_SECRET=generate-secure-cron-secret

# Feature Flags
ENABLE_SHOPIFY_CONNECT=true
ENABLE_META_CONNECT=true
